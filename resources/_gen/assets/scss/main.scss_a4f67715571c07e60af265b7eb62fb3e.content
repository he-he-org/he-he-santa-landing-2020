*,*:before,*:after{box-sizing:border-box}html,body,div,span,object,iframe,figure,h1,h2,h3,h4,h5,h6,p,blockquote,pre,a,code,em,img,small,strike,strong,sub,sup,tt,b,u,i,ol,ul,li,fieldset,form,label,table,caption,tbody,tfoot,thead,tr,th,td,main,canvas,embed,footer,header,nav,section,video{margin:0;padding:0;border:0;font-size:100%;font:inherit;vertical-align:baseline;text-rendering:optimizeLegibility;-webkit-font-smoothing:antialiased;text-size-adjust:none}footer,header,nav,section,main{display:block}body{line-height:1}ol,ul{list-style:none}blockquote,q{quotes:none}blockquote:before,blockquote:after,q:before,q:after{content:'';content:none}table{border-collapse:collapse;border-spacing:0}input{-webkit-appearance:none;border-radius:0}:root{font-size:4px;--red: #DF0B25}html,button{font-family:roboto condensed,sans-serif}button:not(:disabled){cursor:pointer}.screen{width:100vw;min-height:100vh}.screen.first{display:flex;justify-content:center;align-items:center;background:url(http://localhost:62692/bg.jpg);background-position:50%;background-repeat:no-repeat;background-size:cover;position:relative;text-align:center}.screen.first *{color:#fff}.screen.first::before{content:' ';position:absolute;top:0;left:0;width:100%;height:100%;background:linear-gradient(180deg,rgba(0,0,0,0.0174) 0%,rgba(255,255,255,0) 100%),rgba(0,0,0,0.45)}.screen.first .screen-content{display:flex;flex-direction:column;align-items:center}.screen.first .screen-content h1{margin-top:1rem;max-width:250px;font-size:24px;line-height:1.1em}.screen.second{padding:12rem 18rem}.screen.second .intro{width:75vw;max-width:800px}.screen.second h1{font-size:24px;font-weight:700}.screen.second h2{font-size:32px;font-weight:700}.screen.second p{font-size:18px;line-height:1.1em}.screen.second p:not(:first-child){margin-top:1em;line-height:1.1em}.screen.second .bottom{margin-top:20rem;display:grid;grid-template-columns:1fr 1fr;grid-gap:8rem}.screen.second .donate{display:flex;flex-direction:column;align-items:flex-start}.screen.second .donate>*:not(:first-child){margin-top:10rem}.screen.second .amounts{display:flex;margin-top:2rem}.screen.second .amounts>button{background:0 0;position:relative;border:none;font-size:24px;padding:0}.screen.second .amounts>button:not(:first-child){margin-left:17rem}.screen.second .amounts>button::before{content:' ';position:absolute;top:50%;left:50%;border:2px solid var(--red);transform:translateX(-50%)translateY(-50%);padding:6rem 9rem;border-radius:6px;display:none}.screen.second .amounts>button.isActive::before{display:block}.screen.second .donateButton{background:var(--red);border:none;border-radius:2rem;height:18rem;font-size:5rem;color:#fff;padding:4rem 18rem;opacity:0;transition:opacity 200ms}.screen.second .donateButton.isVisible{opacity:1}.screen.second .details{position:relative}.screen.second .amount-details{position:absolute;top:0;left:0;opacity:0;transition:opacity 200ms;border-left:4px solid var(--red);padding-left:10rem;pointer-events:none}.screen.second .amount-details.isVisible{opacity:1;pointer-events:all}.screen-content{position:relative}